<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_menu"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Uruchom system "
        android:id="@+id/button_launch"
        android:onClick="launch"
        android:layout_below="@+id/text_title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_selector"
        android:layout_marginTop="50dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statystki"
        android:id="@+id/button_statistics"
        android:background="@drawable/button_selector"
        android:layout_below="@id/button_launch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyjście"
        android:id="@+id/button_exit"
        android:layout_below="@+id/button_statistics"
        android:background="@drawable/button_selector"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="System Obsługi Transportu Wewnętrznego"
        android:gravity="center"
        android:id="@+id/text_title"
        android:editable="false"
        android:background="@drawable/title"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp" />
</RelativeLayout>
