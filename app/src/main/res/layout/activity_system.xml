<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_menu"
    tools:context="com.buz.maciej.pracainz.SystemActivity">1



    <com.buz.maciej.pracainz.WizView
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/WizView" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Slow"
        android:id="@+id/bSlow"
        android:background="@drawable/button_selector"
        android:onClick="mSlow"
        android:layout_below="@+id/WizView"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:id="@+id/bMedium"
        android:background="@drawable/button_selector"
        android:onClick="mMedium"
        android:layout_below="@+id/WizView"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/bSlow"
        android:layout_toEndOf="@+id/bSlow"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Fast"
        android:id="@+id/bFast"
        android:background="@drawable/button_selector"
        android:onClick="mFast"
        android:layout_below="@+id/WizView"
        android:layout_toRightOf="@+id/bMedium"
        android:layout_toEndOf="@+id/bMedium"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/bReset"
        android:background="@drawable/button_selector"
        android:onClick="mReset"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
